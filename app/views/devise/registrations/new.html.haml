.container
  .form-signin
    %h2.form-signin-heading= t('devise_form.sign_up')
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .field
        = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email address'
      .field
        = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password'
      .notice-password
        = f.label :password, t('devise_form.password')
        - if @minimum_password_length
          %em
            (#{t 'devise_form.min'} #{@minimum_password_length} #{t 'devise_form.symbols'})
      .actions
        = f.submit t('devise_form.sign_up_process'), class: 'btn btn-lg btn-primary btn-block'
    = render "devise/shared/links"