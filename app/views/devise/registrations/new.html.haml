.container
  .form-signin
    %h2.form-signin-heading Регистрация
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .field
        = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email address'
      .field
        = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password'
      .notice-password
        = f.label :password, 'Пароль'
        - if @minimum_password_length
          %em
            (Минимум #{@minimum_password_length} символов)
      .actions
        = f.submit "Зарегистрироваться", class: 'btn btn-lg btn-primary btn-block'
    = render "devise/shared/links"
