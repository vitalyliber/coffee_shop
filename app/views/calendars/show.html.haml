.container
  .simple-calendar
    .calendar-heading
      = link_to(_back_url) do
        СТАТИСТИКА

    - @orders.each do |order|
      - order.products.each do |product|
        .item
          .title= product.title
          .data
            - if order.products.count == 1
              .time= order.created_at.strftime("%H:%M")
            .price= "#{product.price}₽"
      - if order.products.count > 1
        .check
          .time= order.created_at.strftime("%H:%M")
          .cost= "#{order.cost_price}₽"

    .calendar-heading
      = "#{number_with_delimiter(@orders.sum(:cost_price), :delimiter => '.')} ₽"