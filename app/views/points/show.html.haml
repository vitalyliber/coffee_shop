.container

  - if @day_sale.present?
    .info-block
      %div= t :day_sale_is_opened
      %div= "#{distance_of_time_in_words(Time.now - @day_sale.start)} #{t :ago}"

    = link_to t(:open_till), point_till_path(@point), class: 'item-light'
  - else
    - if @last_day_sale.present?
      .info-block
        %div= t :last_day_sale_is_closed
        %div= "#{distance_of_time_in_words(Time.now - @last_day_sale.end)} #{t :ago}"
    - else
      .info-block= t :open_your_first_day_sale
    = link_to t(:open_day_sale), sale_point_path(@point), class: 'item-heavy'
  - if @point.day_sales.closed.present?
    = link_to t(:statistics), point_orders_path(@point), class: 'item-middle'
  = link_to t(:products), point_products_path(@point), class: 'item-middle'
  = link_to t(:points), points_path(set: 'point'), class: 'item-middle'
  - if @day_sale.present?
    = link_to t(:close_day_sales), close_point_path(@point), method: :delete, data: {confirm: t(:are_you_sure)}, class: 'item-heavy'