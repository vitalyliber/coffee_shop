.container

  - if @day_sale.present?
    .info-block
      %div Day sale is opened
      %div= "#{distance_of_time_in_words(Time.now - @day_sale.start)} ago"

    = link_to 'OPEN TILL', point_till_path(@point), class: 'item-light'
  - else
    - if @last_day_sale.present?
      .info-block
        %div Last day sale is closed
        %div= "#{distance_of_time_in_words(Time.now - @last_day_sale.end)} ago"
    - else
      .info-block= "Open your first Day Sale"
    = link_to 'OPEN DAY SALE', sale_point_path(@point), class: 'item-heavy'

  = link_to 'STATISTICS', point_orders_path(@point), class: 'item-middle'
  = link_to 'PRODUCTS', point_products_path(@point), class: 'item-middle'
  - if @day_sale.present?
    = link_to 'CLOSE DAY SALES', close_point_path(@point), method: :delete, data: {confirm: "Are you sure?"}, class: 'item-heavy'