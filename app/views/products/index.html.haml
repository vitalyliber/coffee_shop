.container
  = link_to t('add_product'), new_point_product_path(@point), class: 'item-light'
  - @products.each do |product|
    = link_to(edit_point_product_path(@point, product), class: 'item-middle justify-between') do
      %div= product.title
      %div= "#{product.ml} #{product.meter} / #{product.price}"