= simple_form_for( @product, :url => path_for_form, html: { class: 'form-horizontal' } ) do |f|
  = f.input :title, placeholder: "Name", label: false
  = f.input :ml, placeholder: "ml", label: false
  = f.input :price, placeholder: "Price", label: false
  = f.input :meter, collection: f.object.class.meters, value_method: :first, placeholder: "Meter", label: false
  = f.button :submit, submit_for_form, class: 'common-button'