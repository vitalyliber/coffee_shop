= simple_form_for( @product, :url => path_for_form, html: { class: 'form-horizontal' } ) do |f|
  = f.input :title, placeholder: t(:product_name), label: false
  = f.input :ml, placeholder: t(:product_quantity), label: false
  = f.input :price, placeholder: t(:product_price), label: false
  = f.input :meter, collection: f.object.class.meters, :label_method => lambda { |meter| t("enums.product.meter.#{meter[0]}") }, value_method: :first, placeholder: t(:product_meter), include_blank: false, label: false
  = f.button :submit, submit_for_form, class: 'common-button'